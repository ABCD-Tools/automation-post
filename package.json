    "dev": "next dev",
    "prebuild": "node scripts/build-agent-template.js",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "migrate": "node scripts/migration.mjs",
    "migrate:fresh": "node scripts/migration.mjs --fresh",
    "seed": "node scripts/seeder.mjs",
    "record": "node tools/record.mjs",
    "client:package": "node src/modules-installer/package.mjs",
    "client:build": "node src/modules-installer/builder.mjs",
    "bypass-powershell": "Set-ExecutionPolicy -Scope Process -ExecutionPolicy Bypass"
  },
